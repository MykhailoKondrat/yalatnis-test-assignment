<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="./style.css" />
    <title>KONDRAT TEST ASSIGNMENT</title>
  </head>
  <body>
    <div>
      <h1>Welcome to the One rule club!</h1>
      <span>rule #1 - do not try to add users with same email.</span>
      <h2>Add user </h2></div>
    <form action="add-user" method="POST">
      <div>
        <strong><label for="userName">User Name</label></strong>
        <div>
          <input
            placeholder="Enter users first and last names"
            type="text"
            name="userName"
            id="userName"
            title="Letters, spaces and dots only"
            pattern="[a-zA-Z. ]+"
            required
          />
        </div>
      </div>
      <div>
        <strong> <label for="email">Email</label></strong>
        <div>
          <input
            type="email"
            placeholder="Enter users email"
            name="email"
            id="email"
            required
          />
        </div>
      </div>
      <button type="submit">Add User</button>
      <hr />

    </form>
    <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Created At</th>
      </tr>
      {{#each usersList}}
        <tr>
          <td> {{this.userName}}</td>
          <td> {{this.email}}</td>
          <td> {{this.createdAt}}</td>
        </tr>
      {{/each}}
    </table>

  </body>
</html>
